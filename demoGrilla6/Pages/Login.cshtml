@page
@model demoGrilla6.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #d3d3d3, #ffffff); /* Degradado gris */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* mejor que height fija */
            margin: 0;
        }

        .login-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 350px;
            text-align: center;
        }

        .login-container img {
            width: 120px;
            margin-bottom: 20px;
        }

        .login-container h2 {
            margin-bottom: 20px;
            color: #0d6efd;
        }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        /* ÚNICA definición de .btn-login para evitar conflictos */
        .btn-login {
            display: inline-block;
            width: 100%;
            padding: 12px 24px;
            font-size: 16px;
            font-weight: 600;
            color: #003366; /* Azul más oscuro */
            background-color: #fff; /* Fondo blanco */
            border: 2px solid #003366;
            border-radius: 6px;
            cursor: pointer;
            text-align: center;
            transition: all 0.2s ease-in-out;
        }

        .btn-login:hover {
            background-color: #003366;
            color: #fff;
        }

        /* Estilo profesional para los enlaces secundarios (no botones) */
        .auth-link {
            color: #0d6efd; /* color del link: primary */
            text-decoration: none; /* sin subrayado por defecto */
            font-weight: 500;
            display: inline-block; /* para padding/focus */
            width: 100%;
            text-align: center;
            padding: .25rem .5rem;
            border-radius: .25rem;
        }

        .auth-link:hover {
            text-decoration: underline;
            color: #0a58ca; /* tono más oscuro en hover */
        }

        .auth-link:focus {
            outline: none;
            box-shadow: 0 0 0 .2rem rgba(13, 110, 253, .25); /* foco accesible */
        }

        /* Separación del bloque de enlaces respecto al botón principal */
        .aux-actions {
            margin-top: 12px;
        }

    </style>
</head>
<body>
    

    <div class="login-container">
        <img src="~/images/logoerrazuriz.png" style="text-align:right" />
        
        <form method="post">
            <div class="form-group">
                <label for="username">Usuario</label>
                <input type="text" id="username" name="Input.Username" required value="EPalma" />


                <!-- Alternativa:
                <input asp-for="Input.Username" />
                <span asp-validation-for="Input.Username"></span> -->

            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="Input.Password" required value="Admin123!" />


                <!-- Alternativa:
                <input asp-for="Input.Password" type="password" />
                <span asp-validation-for="Input.Password"></span> -->


            </div>
            <button type="submit" class="btn-login">Entrar</button>



            <!-- Contenedor de acciones secundarias -->
            <div class="form-group mt-3" style="font-size:small">
                <div class="row row-cols-2 g-2">
                    <div class="col">
                        <a href="/Register" >
                           Registrarse
                        </a>
                    </div>
                    <div class="col">
                        <a href="/ForgotPassword">
                        Recuperar contraseña
                        </a>
                    </div>
                </div>
            </div>
            



            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
            }
        </form>
    </div>
</body>
</html>

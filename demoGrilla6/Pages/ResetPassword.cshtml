@page
@model demoGrilla6.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" />


    <style>
        /* Fondo y centrado del contenedor principal */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #d3d3d3, #ffffff);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        /* Contenedor cuadrado centrado */
        .register-container {
            background-color: #fff;
            padding: 24px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 400px; /* lado del cuadrado */
            font-size: small;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

            .register-container h2 {
                margin: 0 0 8px 0;
                color: #003366;
                font-size: 24px;
            }

        .form-group {
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 6px;
                color: #6c757d;
                font-size: 14px;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
                box-sizing: border-box;
            }



        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #0d6efd;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }


        .error-message {
            color: #d30000;
            font-size: 14px;
            margin-top: 6px;
        }

        .success-message {
            color: #2e7d32;
            font-size: 14px;
            margin-top: 6px;
        }

        /* Responsivo: una columna en pantallas pequeñas */
        @@media (max-width: 640px) {
            .register-container {
                width: 94vw;
                height: auto;
            }
        }

        .form-outline .form-control {
            /* font-size: small; */
        }

        .btn-login {
            display: inline-block;
            width: 100%;
            padding: 4px 24px;
            font-size: 16px;
            font-weight: 400;
            color: #003366; /* Azul más oscuro */
            background-color: #fff; /* Fondo blanco */
            border: 2px solid #003366;
            border-radius: 6px;
            cursor: pointer;
            text-align: center;
            transition: all 0.2s ease-in-out;
        }

            .btn-login:hover {
                background-color: #003366;
                color: #fff;
            }

        .form-control {
            font-size: 16px;
        }

        .form-label {
            font-size: 16px;
        }

        .form-outline .form-control {
            padding-top: .52rem;
            padding-bottom: .52rem;
            padding-left: .85rem;
            padding-right: .85rem;
        }

    </style>

</head>
<body>

    <script src="https://cdn.jsdelivr.net/npm/@@coreui/coreui@5.0.0/dist/js/coreui.bundle.min.js"></script>

    <div class="register-container">
        <h2>Restablecer contraseña</h2>

        <form method="post">

            <div class="row">
                <div class="col-12 col-md-12">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input class="form-control" type="password" asp-for="NewPassword" required />
                        <label asp-for="NewPassword"  class="form-label">Contraseña</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-12">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input class="form-control" type="password" asp-for="ConfirmPassword" required />
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-6">

                    <div class="actions">
                        <button type="submit" class="btn-login">Enviar</button>
                    </div>
                </div>

                <div class="col-12 col-md-6" style="text-align:end;margin-top: 20px">
                    <a href="/Login"> Volver</a>
                </div>

            </div>


            <div class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        Hello, world! This is a toast message.
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-coreui-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>


        </form>
    </div>

</body>
</html>

<script type="module">
    import { Input, Ripple, initMDB } from "https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.es.min.js";

    // Inicializa los módulos que usarás
    initMDB({ Input, Ripple });
</script>

@{
    bool showError = TempData["ShowErrorToast"] as bool? ?? false;
    string errorText = TempData["ErrorToastText"] as string ?? "Ocurrió un error.";
}

@if (showError)
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1080;">
        <div id="errorToastLogin" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">@errorText</div>
                <!-- Si lo quieres sin botón, quita el siguiente bloque -->
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-coreui-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const el = document.getElementById('errorToastLogin');
          if (el) {
            const toast = new coreui.Toast(el, { autohide: true, delay: 6000 });
            toast.show();
          }
        });
    </script>
}

